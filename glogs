#!/bin/bash
# uses goaccess to summarize nginx logs

cd /var/log/nginx
case "$1" in
  recent)
    tail -f access.log | goaccess --log-format=COMBINED -
    ;;
  all)
   { zcat access.log.*.gz && tail -f access.log; } | goaccess --log-format=COMBINED -
     ;;
  *)
    echo "Must specify 'recent' or 'all' as argument"
    exit 1
esac
